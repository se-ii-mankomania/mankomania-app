<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/bottom_navigation"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:background="@color/white"
    android:backgroundTint="@color/toolBar_background"
    android:elevation="8dp"
    android:orientation="horizontal">

    <Button
        android:id="@+id/Board_ToFinancesAndStocks"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="6dp"
        android:text="@string/Board_ToFinancesAndStocks" />

    <Button
        android:id="@+id/Board_PlayerScores"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="6dp"
        android:text="@string/playerScores" />

    <Button
        android:id="@+id/Board_LogoutButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginEnd="5dp"
        android:text="@string/Logout" />
</LinearLayout>
